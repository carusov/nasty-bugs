#!/usr/bin/awk -f

BEGIN {
    FS = "\t"
    OFS = "\t"
}

NR > 1 {
    sub(".*/", "", $1)
    sub("\\.fastq\\.gz", "", $1)

    if ($6 >= 30){
	if ($9 >= cov){
	    status = "pass"
	    message = ""
	}
	else {
	    status = "fail"
	    message = "low coverage"
	}
    }
    else {
	status = "fail"
	message = "low quality"
	if ($9 < cov)
	    message = message", low coverage"
    }

    print $0, status, message

}
